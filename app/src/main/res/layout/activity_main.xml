<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.capstone.pacetime.MainActivity" />
        <variable
            name="pattern"
            type="com.capstone.pacetime.BreathPattern" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <LinearLayout
            android:id="@+id/ll_inhale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_start_running"
            app:layout_constraintEnd_toStartOf="@id/ll_exhale">
            <Button
                android:id="@+id/button_inhale_inc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edittext_inhale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@={pattern.inhale}"/>
            <Button
                android:id="@+id/button_inhale_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exhale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_start_running"
            app:layout_constraintStart_toEndOf="@+id/ll_inhale"
            app:layout_constraintEnd_toEndOf="parent">
            <Button
                android:id="@+id/button_exhale_inc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edittext_exhale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@={pattern.exhale}"
                />
            <Button
                android:id="@+id/button_exhale_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <Button
            android:id="@+id/button_start_running"
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{(v) -> activity.onStartClick(v)}"
            />
        <Button
            android:id="@+id/button_view_history"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:backgroundTint="@android:color/holo_green_dark"
            app:layout_constraintStart_toStartOf="@id/button_start_running"
            app:layout_constraintEnd_toEndOf="@id/button_start_running"
            app:layout_constraintTop_toBottomOf="@id/button_start_running"
            android:onClick="@{(v) -> activity.onHistoryClick(v)}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
